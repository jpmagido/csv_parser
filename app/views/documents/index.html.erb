<h2> Index de tous les documents </h2>

<div>
  <% @documents.each do |document| %>
    <ul>
      <li><%= document.name %></li>
      <% if document.csv_file.attached? %>
        <li>Nom du fichier: <%= document.csv_file.blob.filename %></li>
      <% else %>
        <li> Pas de document attach√©</li>
      <% end %>
      <li><%= document.id %></li>
      <li><%= link_to 'show', document_path(document) %></li>
    </ul>
  <% end %>
</div>
